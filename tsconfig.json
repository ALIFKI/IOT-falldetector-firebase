{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
